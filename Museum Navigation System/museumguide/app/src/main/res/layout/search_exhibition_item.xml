<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExhibitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="220dp"
        android:orientation="vertical"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/search_exhibition_name"
            android:text="庆祝新中国成立70周年框业展"
            android:width="220dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"/>

        <TextView
            android:id="@+id/search_exhibition_content"
            android:height="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/search_exhibition_start_time"
            android:text="开始时间： null"
            android:gravity="center"
            android:width="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_exhibition_end_time"
            android:text="结束时间： null"
            android:gravity="center"
            android:width="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_exhibition_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_exhibition_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
        <ImageView
            android:id="@+id/search_exhibition_iamge"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_search_exhibition"
            android:layout_height="150dp"/>
</LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>